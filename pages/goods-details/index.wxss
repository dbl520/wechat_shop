@import "/wxParse/wxParse.wxss";
@import "../template/rating-tpl.wxss";

.container {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.swiper-container {
  width: 100%;
  height: 748rpx;
}

.slide-image {
  width: 100%;
  height: 748rpx;
}

.goods-info{
  margin-bottom: 24rpx;
  padding: 35rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}
.goods-info .goods-title{
  margin-bottom: 28rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
}
.sales {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
}
.goods-info .goods-price {
   color:#e64340;
   font-size: 28rpx;
   font-weight: bold;
}

.choose{
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 35rpx;
  box-sizing: border-box;
  width: 100%;
  height: 102rpx;
  font-size: 28rpx;
  line-height: 102rpx;
  background-color: #fff;
}
.choose text {
  flex: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.choose .arrow-right {
  margin-left: 20rpx;
  width: 16rpx;
  height: 24rpx;
}
.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
}
.goods-text{
  margin-top: 30rpx;
  padding: 0 30rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.des-imgs{
  width:100%;
}
.des-imgs image{
  width: 100%;
}

.footer-box{
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  box-shadow:0 2rpx 5rpx #ccc;
}
.btn-wrapper {
  display: flex;
  flex: 1;
}
.footer-box .contact{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 125rpx;
  height: 100%;
}

.contact-btn {
  position: absolute;
  left: 0; 
  flex: 1;
  height: 100rpx; 
  opacity: 0;
}
.contact-icon {
  width: 60rpx;
  height: 60rpx;
}
.contact text {
  font-size: 18rpx;
  color: #999;
}

.footer-box .shop-cart-btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 100%;
}
.shop-cart-btn text {
  font-size: 18rpx;
  color: #999;
}
.shop-cart-btn image {
  width: 60rpx;
  height: 60rpx;
}

.footer-box .join-shop-cart{
  text-align: center;
  flex: 1;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  color:#fff;
  background-color: #ff6850;
}
.footer-box .now-buy{
  text-align: center;
  flex: 1;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  background-color: #e64340;
  color:#fff;
}
.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pop-goods-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.pop-img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width: 120rpx;
  height: 120rpx;
}
.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-goods-price{
  font-size:26rpx;
  color:#e64340;
  margin-top:20rpx; 
}
.pop-goods-close{
  display: block;
  width: 36rpx;
  height: 36rpx;
   align-self: stretch; 
   margin-left: 20rpx; 
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  margin: 0 20rpx 20rpx 0;
  padding: 8rpx 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  border: 1px solid #ddd;
  border-radius: 40rpx;
}
.size-label-box .label-item.active{
  color: #e64340;
  border: 1px solid #e64340; 
}
.buy-num-box{
   display: flex;
   justify-content: space-between;
   padding: 30rpx 30rpx 48rpx 0;
   margin-left: 30rpx; 
   border-top: 1px solid #eee;
   margin-top: 30rpx;
   align-items: center;
}
.num-label{
  font-size:26rpx;
  color:#000000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.popup-join-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
}
.buy-num-box .num-box .hui{
  background-color: #f5f5f9;
}

.rating-wrapper {
  margin-top:35rpx;
  background-color: #fff;
}
.label-title {
  display: flex;
  align-items: center;
  color: #333;
  border-bottom:1px solid #eee;
}
.reating-num {
  flex: 1;
  color: red;
}
.more {
  color: #666;
}
